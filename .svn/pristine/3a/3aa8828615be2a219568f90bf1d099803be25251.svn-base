<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ include file="/WEB-INF/jsp/common/taglibs.jsp"%>

<div class="space-10"></div>
<div class="container_16">
	<form id="modifyPasswordForm" method="post">
		<div class="grid_g margin-bottom-10">
			<div class="grid_1">&nbsp;</div>	
			<div class="grid_3 align-right height-30"><label><span class="red">*&nbsp;</span>旧密码</label></div>				
			<div class="grid_10">
				<input class="easyui-textbox" type="password" name="oldPassword" id="oldPassword"
					data-options="iconCls:'icon-lock', iconWidth:38, width: '100%', required: 'true', missingMessage : '请输入旧的密码！'">							
			</div>				
			<div class="clear"></div>
		</div>
	
		<div class="grid_g margin-bottom-10">
			<div class="grid_1">&nbsp;</div>		
			<div class="grid_3 align-right height-30"><label><span class="red">*&nbsp;</span>新密码</label></div>			
			<div class="grid_10">
				<input class="easyui-textbox" type="password" name="newPassword" id="newPassword"
					data-options="iconCls:'icon-lock', iconWidth:38, width: '100%', required: 'true', missingMessage : '请输入新的密码！'">			
			</div>
			<div class="clear"></div>
		</div>
		
		<div class="grid_g">
			<div class="grid_1">&nbsp;</div>
			<div class="grid_3 align-right height-30"><label><span class="red">*&nbsp;</span>确认新密码</label></div>					
			<div class="grid_10">
				<input class="easyui-textbox" type="password" name="confirmPassword" 
					data-options="iconCls:'icon-lock', iconWidth:38, width: '100%', required: 'true', missingMessage : '请输入确认新密码！'" validType="same['newPassword']">		
			</div>
			<div class="clear"></div>
		</div>							
	</form>
</div>
<div class="space-10"></div>